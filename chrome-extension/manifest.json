{
  "manifest_version": 3,
  "name": "Jira Issue Helper",
  "version": "1.0.0",
  "description": "Adds functionality next to Jira issue breadcrumbs",
  "permissions": [],
  "host_permissions": [
    "http://localhost:8887/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://smma-sqe.atlassian.net/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}